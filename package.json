{
  "name": "battle-city-typescript-multiplayer",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "homepage": "https://baterson.github.io/battle-city-typescript",
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:client",
    "dev:host": "npm-run-all --parallel dev:server host:client",
    "build": "npm-run-all build:server build:client",
    "start": "npm-run-all start:server preview:client",
    "dev:client": "vite",
    "host:client": "vite --host",
    "build:client": "vite build",
    "preview:client": "vite preview",
    "dev:server": "tsx watch src/server/index.ts",
    "build:server": "tsup src/server/index.ts --outDir distServer",
    "start:server": "node distServer/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baterson/battle-city-typescript"
  },
  "author": "https://github.com/baterson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/baterson/issues"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@types/ws": "^8.18.1",
    "npm-run-all": "^4.1.5",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.2"
  },
  "dependencies": {
    "ws": "^8.18.1"
  }
}
